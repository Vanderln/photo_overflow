<%= stylesheet_link_tag "user_profile" %>
<div class="main_content">
<h1> Account Page </h1>
<h2> Summary for <%= @current_user.username%> </h2>

<%= render partial: "subnav"%>
<%= render partial: "userstats"%>


<p> My Latest 5 Questions </p>
<hr>
<% if @questions %>
  <%= render @questions.reverse.shift(5) %>
<% else %>
  <p> You have not yet asked a question </p>
<% end %>

<hr>
<p> My Latest 5 Answers </p>
<hr>
<% if @myanswers %>
  <%= render :partial => "myanswer", :collection => @myanswers.reverse.shift(5) %>
<% else %>
  <p> You have not yet asked a question </p>
  <!-- Link to ask a question now -->
<% end %>
</div>

